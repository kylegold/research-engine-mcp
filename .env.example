# Server Configuration
PORT=3000
NODE_ENV=development

# Commands.com JWT Configuration
COMMANDS_JWKS_URL=https://api.commands.com/.well-known/jwks.json
COMMANDS_JWT_ISSUER=https://api.commands.com
COMMANDS_JWT_AUDIENCE=commands.com

# Development
SKIP_AUTH=false  # Set to true for local development without auth

# GitHub API (required for GitHub search)
# Get your token at: https://github.com/settings/tokens
GITHUB_TOKEN=your-github-token

# Web Search API (choose one)
# Option 1: SerpAPI (https://serpapi.com)
SERP_API_KEY=your-serpapi-key

# Option 2: Bing Search API (https://azure.microsoft.com/en-us/services/cognitive-services/bing-web-search-api/)
BING_API_KEY=your-bing-api-key

# Optional: Logging
LOG_LEVEL=info