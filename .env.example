# Server Configuration
PORT=3000
NODE_ENV=development

# Commands.com JWT Configuration
COMMANDS_JWKS_URL=https://api.commands.com/.well-known/jwks.json
COMMANDS_JWT_ISSUER=https://api.commands.com
COMMANDS_JWT_AUDIENCE=commands.com

# Redis Configuration (for BullMQ)
REDIS_URL=redis://localhost:6379

# API Keys for Research Sources
GITHUB_TOKEN=your-github-token
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_REFRESH_TOKEN=your-reddit-refresh-token
OPENAI_API_KEY=your-openai-api-key

# Development
SKIP_AUTH=false  # Set to true for local development without auth

# Optional: Logging
LOG_LEVEL=info