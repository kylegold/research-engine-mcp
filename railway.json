{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npm run build"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node dist/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "services": [
    {
      "name": "mcp-server",
      "source": {
        "repo": "."
      },
      "deploy": {
        "startCommand": "node dist/index.js"
      }
    },
    {
      "name": "worker",
      "source": {
        "repo": "."
      },
      "deploy": {
        "startCommand": "node dist/worker.js",
        "numReplicas": 2
      }
    }
  ]
}